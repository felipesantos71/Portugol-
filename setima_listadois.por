programa {
  //inicio do programa
  funcao inicio() {
  //declarando variaveis  
  inteiro numero
  //solicitando dados do usuario
  escreva("Digite um numero: ")
  leia(numero) 
  //estrutura de dados informando resultados
  se (numero % 2 == 1) {
    escreva("Número é impar")
  } senao {
    escreva("Número é par")
  }
  }
  //fim do programa
}
